NAME=	libft.a

SRCS= ft_isalnum.c ft_isascii.c ft_isdigit.c ft_isalpha.c ft_bzero.c ft_isprint.c ft_memchr.c	ft_memcmp.c ft_memcpy.c	ft_memmove.c ft_memset.c ft_strchr.c ft_strlcat.c ft_strlcpy.c ft_strlen.c ft_strncmp.c ft_strrchr.c ft_tolower.c ft_toupper.c ft_atoi.c 

OBJS= $(SRCS:.c=.o)

CC= clang

CFLAGS= -Wall -Wextra -Werror

all: $(NAME)
	echo "Success!"

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

$(NAME): $(OBJS)
	ar rc $(NAME) $(OBJS)

re: fclean all

.PHONY: all clean fclean  re bonus rebonus
